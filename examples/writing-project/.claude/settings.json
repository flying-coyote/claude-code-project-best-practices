{
  "permissions": {
    "allow": [
      "Bash(npm run lint*)",
      "Bash(npx markdownlint*)",
      "Bash(git status*)",
      "Bash(git diff*)",
      "Bash(git log*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'if ! git diff --quiet 2>/dev/null; then echo \"⚠️ Uncommitted changes - save your draft\"; fi; if git status 2>/dev/null | grep -q \"ahead\"; then echo \"⚠️ Unpushed commits\"; fi'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write(**/*.md)",
        "hooks": [
          {
            "type": "command",
            "command": "npx markdownlint --fix \"$FILE\" 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
